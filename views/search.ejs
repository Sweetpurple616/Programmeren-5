<% include partials/menu %>

<div class="ui container">
        <form method="post" action="/search">
            <div>
                            <input type="text" name="<%search%>" value="<%=search%>">
                            <input type='checkbox' name='catergory' value="funny">Funny
                            <input type='checkbox' name='catergory' value="awesome">Awesome
                            <input type='checkbox' name='catergory' value="games">Games
            <button class="ui button"><i class="search icon" ></i></button>
        </form>
        <div class="section">
          <% if (result.length === 0){ %>
            <label>No results!</label>
          <% } else { %>
            <table class="ui celled table">
                <th>photo</th>
                <th>name</th>
                <th>description</th>
                <th>catergory</th>
            <% result.forEach(function(photo) { %> 
        <tr>
                <td><img src="<%= photo.file %>"></td>
                <td><%= photo.name %></td>
                <td><%= photo.description %></td>
                <td><%= photo.catergory %></td>
            </tr>

          <% }); %> </table> <% } %>
            <div class="ui grid">  
            </div>
        </div>
        </div>