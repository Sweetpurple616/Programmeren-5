<form method="post" action="/sign" class="ui form">
    <div class="field">
      <label>Full Names</label>
      <input type="text" name="fullname" placeholder="Full Names" value="">
    </div>
    <div class="required field">
      <label>Email</label>
      <input type="email" name="email" placeholder="Email" value="">
    </div>
    <div class="required field">
      <label>Password</label>
      <input type="password" name="password" placeholder="Password" value="">
    </div>
    <button class="ui teal button" type="submit" name="action" value="signup">Sign Up</button>
    </form>
    <%- exposeLocalsToBrowser(); %>
